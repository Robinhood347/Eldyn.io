```javascript
// Import necessary libraries
const express = require('express');
const app = express();
const fs = require('fs');
const path = require('path');

// Set up the port
const port = 3000;

// Set up the display (using HTML and CSS)
app.use(express.static('public'));

// Define colors
const white = '#FFFFFF';
const black = '#000000';

// Set up font (using CSS)
// In public/styles.css:
// body {
//   font-family: Arial, sans-serif;
// }

// Render text (using HTML)
// In public/index.html:
// <h1 id="sign-up">Sign Up!</h1>
// <label for="username">Username:</label>
// <input type="text" id="username" />
// <label for="email">Email:</label>
// <input type="email" id="email" />
// <label for="password">Password:</label>
// <input type="password" id="password" />
// <label for="confirm-password">Confirm Password:</label>
// <input type="password" id="confirm-password" />

// Input box variables
let activeBox = null;
let userText = '';
let emailText = '';
let passwordText = '';
let confirmPasswordText = '';

// Function to save data
function saveData(username, email, password, confirmPassword) {
  const data = {
    username,
    email,
    password,
    confirmPassword,
  };
  fs.writeFileSync('signup_data.json', JSON.stringify(data));
}

// Handle form submission
app.use(express.json());
app.post('/submit', (req, res) => {
  const { username, email, password, confirmPassword } = req.body;
  if (password !== confirmPassword) {
    console.log('Error, password does not match confirmation password');
  } else {
    saveData(username, email, password, confirmPassword);
  }
  res.redirect('/');
});

// Start the server
app.listen(port, () => {
  console.log(`Server started on port ${port}`);
});
```

```html
<!-- public/index.html -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sign Up</title>
  <link rel="stylesheet" href="styles.css">
</head>
<body>
  <h1 id="sign-up">Sign Up!</h1>
  <form id="sign-up-form">
    <label for="username">Username:</label>
    <input type="text" id="username" />
    <label for="email">Email:</label>
    <input type="email" id="email" />
    <label for="password">Password:</label>
    <input type="password" id="password" />
    <label for="confirm-password">Confirm Password:</label>
    <input type="password" id="confirm-password" />
    <button type="submit">Submit</button>
  </form>

  <script src="script.js"></script>
</body>
</html>
```

